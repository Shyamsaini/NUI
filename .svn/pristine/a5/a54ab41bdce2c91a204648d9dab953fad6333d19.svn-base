import { Injectable } from '@angular/core';
import { HttpClient } from '@angular/common/http';
import { Observable } from 'rxjs';
import { environment } from '../../../environments/environment';

@Injectable({
  providedIn: 'root'
})
export class PredictiveAnalysisService {

 private apiUrl = `${environment.apiUrl}/PredictiveAnalysis/trend-chart`;
 private apiComparsionChart = `${environment.apiUrl}/PredictiveAnalysis/Comparsion-Chart`;
 private apiPredictionChart = `${environment.apiUrl}/PredictiveAnalysis/prediction-chart`;

  constructor(private http: HttpClient) {}

  getCrimeTrends(): Observable<any> {
    return this.http.get<any>(`${this.apiUrl}`);
  }

  getCrimeComparisonData(): Observable<any> {
    return this.http.get<any>(`${this.apiComparsionChart}`);
  }
getPredictionChart(): Observable<any> {
  return this.http.get<any>(`${this.apiPredictionChart}`);
}


}
