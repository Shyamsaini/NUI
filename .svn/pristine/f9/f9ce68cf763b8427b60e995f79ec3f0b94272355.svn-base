<ng-template #content let-modal>
    <div class="modal-header px-3 pt-3 pb-0 border-bottom-0">
        <button type="button" class="btn-close" aria-label="Close" (click)="modal.dismiss('Cross click')"></button>
    </div>
    <div class="modal-body pt-0">
        <!-- Logo -->
        <div class="logo mb-4 text-center">
            <img src="assets/images/new-logo.jpg" alt="Nyaay Setu" width="230px">
        </div>
        <!-- OTP Inputs -->
        <div *ngIf="isOtpTextVisible" class="d-flex justify-content-center mb-3 otp-filler">

            <input type="text" class="form-control otp-input" [(ngModel)]="otp1" maxlength="1"
                (keydown)="moveFocus($event, otp2Input, null)" #otp1Input />

            <input type="text" class="form-control otp-input" [(ngModel)]="otp2" maxlength="1"
                (keydown)="moveFocus($event, otp3Input, otp1Input)" #otp2Input />

            <input type="text" class="form-control otp-input" [(ngModel)]="otp3" maxlength="1"
                (keydown)="moveFocus($event, otp4Input, otp2Input)" #otp3Input />

            <input type="text" class="form-control otp-input" [(ngModel)]="otp4" maxlength="1"
                (keydown)="moveFocus($event, otp5Input, otp3Input)" #otp4Input />

            <input type="text" class="form-control otp-input" [(ngModel)]="otp5" maxlength="1"
                (keydown)="moveFocus($event, otp6Input, otp4Input)" #otp5Input />

            <input type="text" class="form-control otp-input" [(ngModel)]="otp6" maxlength="1"
                (keydown)="moveFocus($event, null, otp5Input)" #otp6Input />

        </div>

        <!-- Action Buttons -->
        <div class="d-flex justify-content-center">
            <button class="btn btn-success text-white mx-1" (click)="verfiyOTPUser()" *ngIf="isOtpVerfiy">Verify
                OTP</button>
            <button class="btn blu-cr text-white mx-1" *ngIf="isOtpReSendButton">Resend OTP</button>
        </div>
    </div>
</ng-template>


<section class="container-fluid ">
    <div class="row vh-100">
        <div class="col-md-6 col-12 text-center">
            <div class="d-flex flex-column align-items-center justify-content-center h-100">
                <img src="assets/images/new-logo.jpg" alt="Nyaay Setu" class="mx-auto mt-5">
                <div class="px-4 sign-container mx-auto ">
                    <div class="text-center mt-4">
                        <h2 class="fw-bold sup-h2 fs-1 mb-2">Super Admin Login</h2>
                        <div class="mb-2 mx-auto signin-border"></div>

                        <div class="position-relative my-4 inner-page">
                            <div class="input-group mb-3">
                                <span class="input-group-text blu-cr"><i class="fa fa-map-marker text-white"></i></span>
                                <select class="form-select py-1 state-slct mb-0" [(ngModel)]="selectedStateCode"
                                    name="state">
                                    <option value="0">Select State</option>
                                    <option *ngFor="let state of states" [value]="state.StateCode">{{ state.stateName }}
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="position-relative ">
                            <div class="input-group mb-3">
                                <span class="input-group-text blu-cr grne-cr  text-center"><i
                                        class="fa fa-phone text-white" aria-hidden="true"></i></span>
                                <!-- <input type="text" class="form-control" placeholder="Enter Mobile Number"> -->
                                <input type="text" class="form-control" placeholder="Enter Mobile Number"
                                    [(ngModel)]="mobileNumber" name="mobile" maxlength="10" pattern="[0-9]{10}"
                                    required>
                            </div>
                        </div>
                        <div class="captcha-container text-center mb-3">
                            <div class="row">
                                <div class="col-sm-5"><img [src]="captchaUrl" alt="Captcha" /></div>
                                <div class="col-sm-7">
                                    <div class="d-flex">
                                        <a href="javascript:void(0)" (click)="CaptchaRefresh()">
                                            <img src="assets/images/refresh.png" alt="refresh" width="30px"
                                                class="mr-2">
                                        </a>
                                        <input type="text" class="form-control" placeholder="Enter Captcha"
                                            [(ngModel)]="captch_input" maxlength="10">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <button class="btn  my-5 fw-bold btn-lg sign-up rounded-5 px-5 fs-6"
                            (click)="verifyMobile()">Login</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-12 right-box d-flex px-0">
            <div class="rightside-image"></div>
        </div>
    </div>
</section>