<div class="pc-container">
  <div class="pcoded-content pb" style="padding-bottom:90px;">
    <div class="page-header">
      <div class="page-block">
        <div class="row align-items-center">
          <div class="col-md-6">
            <div class="page-header-title">
              <h5 class="m-b-10">Fir View Update Dashboard</h5>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card mt-4">
      <div class="card-body">
        <form [formGroup]="logSearchForm" (ngSubmit)="UpdateFirViewLogs()">
          <div class="row">
            
            <div class="col-md-3 col-12 mb-3">
                <label class="form-label">State</label>
                <sup class="text-danger top-0">*</sup>
                <select class="form-select" [(ngModel)]="selectedStateCode" formControlName="selectedStateCodeform" name="state">
                    <option [value]="0" disabled selected>Select</option>
                    <option *ngFor="let state of states" [value]="state.StateCode">{{ state.stateName }}</option>
                </select>       
            </div>
  
            <div class="col-md-3 col-12 mb-3 text-right pt-4 mt-2">   
                <button type="submit" class="btn btn-success text-white" [disabled]="isSearchDisabled">Update</button>
                <button type="button" class="btn btn-secondary text-white ml-2" (click)="resetForm()">Reset</button>
            </div>
            
          </div>

        </form>
      </div>
    </div>

   <div *ngIf="isLoadingFirViewUpdated" class="text-center my-5 py-5">
      <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
      <h4 class="mt-3">Processing Your Request</h4>
      <p class="text-muted">Please wait while we update the FIR views. This may take some time.</p>
    </div>

  </div>
</div>
