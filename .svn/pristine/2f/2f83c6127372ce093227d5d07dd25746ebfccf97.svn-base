    fetchPieChart(district:any,ps_code:any) {
    this.PieLoading = true;
    const formData = this.form.value;

    const stateCode = localStorage.getItem('stateCode') ?? '';
        const requestPayload = {
          state_code: stateCode,
          district_code: district,
          ps_code: ps_code
        };
    this.predictiveAnalysisService.getCrimeTrends(requestPayload.state_code, requestPayload.district_code, requestPayload.ps_code).subscribe(
      response => {
        if (response?.isSuccess && response.data?.crime_trends) {
          debugger
          this.crimeTrends = response.data.crime_trends;
          this.createPieChart();
        } else {
          console.error('Invalid response:', response);
        }
        this.PieLoading = false;  
      },
     
    );
}
  createPieChart() {
    if (!this.crimeTrends?.length) return;  
    const labels = this.crimeTrends.map(item => item.crime_type);
    const dataValues = this.crimeTrends.map(item => item.sum);
    const totalSum = dataValues.reduce((acc, val) => acc + val, 0);
    const percentages = dataValues.map(value => `${((value / totalSum) * 100).toFixed(1)}%`);
    const colors = ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF'];
    Chart.getChart("crimePieChart")?.destroy();
    Chart.register(ChartDataLabels);
    new Chart("crimePieChart", {
      type: 'pie',
      data: { labels, datasets: [{ data: dataValues, backgroundColor: colors }] },
      options: {
        responsive: true,
        plugins: {
          legend: { display: true, position: 'top' },
          tooltip: {
            callbacks: {
              label: ({ dataIndex }) => `${labels[dataIndex]}: ${dataValues[dataIndex]} (${percentages[dataIndex]})`
            }
          },
          datalabels: {
            color: '#000',
            formatter: (_, ctx) => percentages[ctx.dataIndex],
            font: { weight: 'bold' }
          }
        }
      }
    });
  }
  fetchCrimeComparisonData(district:any,ps_code:any) {
    this.BarLoading = true; 
    const stateCode = localStorage.getItem('stateCode') ?? '';
     const requestPayload = {
          state_code: stateCode,
          district_code: district,
          ps_code: ps_code
        };
    this.predictiveAnalysisService.getCrimeComparisonData(requestPayload.state_code, requestPayload.district_code, requestPayload.ps_code).subscribe(response => {
      this.BarLoading = false; 
  
      if (response?.isSuccess && response.data?.status === 'success' && response.data.x_axis && response.data.y_axis) {
        this.crimeComparisonData = response.data; 
        this.createCrimeComparisonChart();
      } else {
        console.error('Invalid response format:', response);
      }
      
    }, error => {
      this.BarLoading = false;
      console.error('Error fetching crime comparison data:', error);
    });
  }

 
  
  createCrimeComparisonChart() {
    
    if (!this.crimeComparisonData?.x_axis || !this.crimeComparisonData?.y_axis) return;
  
    const ctx = document.getElementById("crimeComparisonChart") as HTMLCanvasElement;
  
    this.chartInstance?.destroy();
  
    this.chartInstance = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: this.crimeComparisonData.x_axis,
        datasets: [{
          label: 'Crime Rate Comparison (%)',
          data: this.crimeComparisonData.y_axis,
         // backgroundColor: this.crimeComparisonData.y_axis.map((value: number) => value < 0 ? '#FF4D4D' : '#36A2EB'),
         backgroundColor: [
          'rgba(255, 99, 132, 0.2)',
          'rgba(255, 159, 64, 0.2)',
          'rgba(255, 205, 86, 0.2)',
          'rgba(75, 192, 192, 0.2)',
          'rgba(54, 162, 235, 0.2)'
        ],
        borderColor: [
          'rgb(255, 99, 132)',
          'rgb(255, 159, 64)',
          'rgb(255, 205, 86)',
          'rgb(75, 192, 192)',
          'rgb(54, 162, 235)'
        ],
        borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: { display: false },
          tooltip: {
            callbacks: {
              label: function(tooltipItem) {
                return `${Math.trunc(tooltipItem.raw as number)}%`; 
              }
            }
          },
          datalabels: { 
            anchor: 'end',
            align: 'top',
            formatter: (value) => Math.trunc(value) 
          }
        },
        scales: {
          y: {
            beginAtZero: false,
            title: { display: true, text: "Percentage Change (%)" }
          },
          x: {
            title: { display: true, text: "Crime Categories" }
          }
        }
      },
      plugins: [ChartDataLabels] 
    });
  }
  

  fetchLineTrends(district:any,ps_code:any) {
    debugger
    this.LineLoading = true; 
    const stateCode = localStorage.getItem('stateCode') ?? '';
     const requestPayload = {
          state_code: stateCode,
          district_code: district,
          ps_code: ps_code
        };
    this.predictiveAnalysisService.getPredictionChart(requestPayload.state_code, requestPayload.district_code, requestPayload.ps_code).subscribe(response => {      
      if (response?.isSuccess && response.data?.crime_trends) { 

        this.crimeTrends = response.data.crime_trends;
        this.createLineChart();
        this.LineLoading = false; 
      } else {
        console.error('Invalid response structure:', response);
        this.LineLoading = false; 
      }
    }, error => {
      console.error('Error fetching crime trends:', error);
      this.LineLoading = false; 
    });
  }

  createLineChart() {
    if (!this.crimeTrends.length) return;  
    const labels = this.crimeTrends[0].x_axis.map((year: number) => year.toString());  
    const colors = [
      'rgb(255, 99, 132)',
      'rgb(255, 159, 64)',
      'rgb(8, 4, 243)',
      'rgb(75, 192, 192)',
      'rgb(54, 162, 235)',
      'rgb(153, 102, 255)',
      'rgb(245, 4, 4)',
      'rgb(255, 159, 64)',
      'rgb(19, 21, 22)'
    ];   
    const datasets = this.crimeTrends.map((crime, index) => ({
      label: crime.crime_type,
      data: crime.y_axis,
      borderColor: colors[index % colors.length], 
      
    //  backgroundColor: colors[index % colors.length],
    backgroundColor: [
      'rgb(255, 99, 132)',
      'rgb(255, 159, 64)',
      'rgb(8, 4, 243)',
      'rgb(75, 192, 192)',
      'rgb(54, 162, 235)',
      'rgb(153, 102, 255)',
      'rgb(245, 4, 4)',
      'rgb(255, 159, 64)',
      'rgb(19, 21, 22)'
    ],
      borderWidth: 2,
      fill: false,
      tension: 0.1
    }));
  
    if (this.lineChart) {
      this.lineChart.destroy();
    }
  
    this.lineChart = new Chart("crimeLineChart", {
      type: 'line',
      data: { labels, datasets },
      options: {
        responsive: true,
        plugins: {
          legend: { position: 'top' }
        },
        scales: {
          y: { beginAtZero: true }
        }
      }
    });
  }
  
  private getRandomColor(): string {
    return `hsl(${Math.floor(Math.random() * 360)}, 70%, 50%)`;
  }
