   verifyMobile(mobileNumber: string, stateCode: number, captcha: string, captchaId: string): Observable<any> {
    const headers = new HttpHeaders({
      'Content-Type': 'application/json',
      'Accept': '*/*'
    });

    const body = {
      mobileNumber: mobileNumber,
      stateCode: stateCode,
      captchaId:captchaId,
      captchaValue: captcha,
       
    };
    return this.http.post<any>(this.apiVerifyNumberUrl, body, { headers });
  }




  UserDetails(accessToken: string): Observable<any> {
    const headers = new HttpHeaders().set('accessToken', accessToken); 
    return this.http.get<any>(this.apiUserDetails, { headers });
  }
    
  loginWithJanParichay(stateCode: string, mobileNumber: string): Observable<any> {
    const headers = new HttpHeaders({
      'Content-Type': 'application/json',
      'accept': '*/*'
    });

    const body = {
      stateCode: stateCode,
      mobileNumber: mobileNumber
    };
    return this.http.post<any>(this.apiLoginWithJanParichay, body, { headers });
  }

  authorize(state: string): Observable<any> {
    const params = new HttpParams().set('state', state); 
    return this.http.get<any>(`${this.apiVerifyJanParichay}/authorize`, { params });
  }

  

  revokeToken(): Observable<any> {
    const token = localStorage.getItem('AuthorizationToken');
    if (!token) return new Observable(observer => observer.complete());

    const headers = new HttpHeaders({
      accessToken: token, 
    });

    return this.http.get<any>(`${environment.apiUrl}/JanParichayOAuth/revoke`, { headers });
  }


  exchangeToken(code: string, state: string): Observable<any> {
    return this.http.get(`${this.CallbackbaseUrl}/home`, {
      params: { code, state },
    });
  }

  verifyOtp(stateCode: number, mobileNumber: string, otp: string): Observable<any> {
    const headers = new HttpHeaders({
      'Content-Type': 'application/json',
      'accept': '*/*'
    });

    const body = {
      stateCode: stateCode,
      mobileNumber: mobileNumber,
      otp: otp
    };
    return this.http.post<any>(this.apiVerifyOtpUrl, body, { headers });
  }

  generateCaptcha(){
    return this.http.get<any>(`${environment.apiUrl}/Public/GenerateCaptcha`);
  }


  getStoredData():any {
    const storedData = localStorage.getItem('userData');
    if (storedData) {
      const parsedData: User = JSON.parse(storedData);
      return storedData;
    }
  }

}