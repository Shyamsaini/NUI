import { Injectable } from '@angular/core';
import { HttpClient, HttpHeaders, HttpParams } from '@angular/common/http';
import { Observable } from 'rxjs';
import { User } from './../models/user.model';
import { environment } from '../../../environments/environment';

@Injectable({
  providedIn: 'root'
})
export class AuthService {

  private apStatesUrl = `${environment.apiUrl}/Public/GetStates`;

  private apiVerifyNumberUrl = `${environment.apiUrl}/Login/VerifyMobileWeb`;

  private apiUserDetailsByMobileNumberUrl = `${environment.apiUrl}/Login/UserDetailsByMobileNumber`;

  private apiVerifyOtpUrl = `${environment.apiUrl}/Login/VerifyOtp`;

  private apiVerifyJanParichay = `${environment.apiUrl}/JanParichayOAuth`; 

  private apiLoginWithJanParichay = `${environment.apiUrl}/Login/LoginWithJanParichay`;

  private CallbackbaseUrl =`${environment.apiUrl}/JanParichayOAuth`;

  private apiUserDetails = `${environment.apiUrl}/JanParichayOAuth/user-details`;

    private apiSearchByName = `${environment.apiUrl}/Staffdetail/StaffByNameOrbeltNumber`;

  constructor(private http: HttpClient) { }

  getStates(): Observable<any[]> {
    return this.http.get<any[]>(this.apStatesUrl);
  }


  UserDetailsByMobileNumber(data: any, stateCode: string): Observable<any> {
  
    const body = {
      mobileNumber: data.MobileNumber, 
      stateCode: stateCode
    };
    return this.http.post<any>(this.apiUserDetailsByMobileNumberUrl, body);
  }


SearchByName(SearchName: string): Observable<string[]> {
  const payload = {
    SearchName
  };
  return this.http.post<string[]>(this.apiSearchByName, payload);
}


// SearchByName(SearchName: string, districtCodes: any[], PsCodes: any[]): Observable<string[]> {
